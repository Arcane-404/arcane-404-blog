{
  "name": "arcane-404-blog",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "config": {
    "port": 5005,
    "app": "npm start",
    "server": "npm run dev:s",
    "database": "npm run dev:db",
    "client": "npm run dev:c",
    "full-stack": "npm run dev",
    "update": "npm run update",
    "remove": "npm run remove"
  },
  "scripts": {
    "start": "node index.js",
    "dev:s": "nodemon index.js",
    "dev:db": "node temp/index.js",
    "dev:c": "cd client && npm start",
    "dev": "concurrently -k -n 'server,client' -c 'yellow,white' npm:\"dev:s\" npm:\"dev:c\"",
    "build": "npm install && cd client && npm install && npm run build",
    "build:dev": "cd client && npm run build",
    "prod:dev": "cd client && serve build",
    "unbuild": "cd client && rimraf build",
    "preupdate": "echo \"merge updates\" && git pull origin develop",
    "update": "echo \"server install\" && npm install",
    "postupdate": "echo \"client install\" && cd client && npm install",
    "preremove": "echo \"removing all package-lock.json & node_modules\"",
    "remove": "find . -name \"package-lock.json\" && find . -name \"package-lock.json\" | xargs rm -rf",
    "postremove": "find . -name \"node_modules\" && find . -name \"node_modules\" | xargs rm -rf",
    "prepare": "husky install",
    "check:format": "prettier --check \"**/*.{json,md,mdx}\"",
    "check:lint": "eslint \"**/*.{js,jsx}\"",
    "style:format": "prettier --write \"**/*.{json,md,mdx}\"",
    "style:lint": "eslint --fix \"**/*.{js,jsx}\"",
    "test-all": "npm-run-all check:lint build:dev",
    "stage-all": "lint-staged"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.7",
    "morgan": "^1.10.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "serve": "^12.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arcane-404/arcane-404-blog.git"
  },
  "bugs": {
    "url": "https://github.com/Arcane-404/arcane-404-blog/issues"
  },
  "homepage": "https://github.com/Arcane-404/arcane-404-blog#readme"
}
